# Railway Worker Environment Variables Template
# Copy this to Railway environment variables

# ===== HEALTH CHECK CONFIGURATION =====
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080

# ===== WORKER CONFIGURATION =====
WORKER_ID=railway-worker-1
WORKER_TYPE=harvester
LOG_LEVEL=INFO
ENVIRONMENT=production

# ===== SUPABASE CONFIGURATION =====
# Required - Get from Supabase dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# ===== REDIS RATE LIMITING (UPSTASH) =====
# Required - Get from Upstash dashboard
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ===== OPTIONAL PROXY CONFIGURATION =====
# If using Bright Data or other proxy service
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# ===== OPTIONAL MONITORING =====
# Sentry for error tracking
SENTRY_DSN=

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS_PER_MINUTE=20
RATE_LIMIT_BURST_SIZE=5

# ===== SCRAPING CONFIGURATION =====
MAX_COMMENTS_PER_VIDEO=100
MAX_PAGES_PER_VIDEO=2
SCRAPING_TIMEOUT=30000
RETRY_ATTEMPTS=3